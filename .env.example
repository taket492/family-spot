# Postgres (production example)
DATABASE_PROVIDER=postgresql
DATABASE_URL=postgresql://user:pass@host:5432/kids

# Optional: MapTiler API key for vector tiles (improves speed/appearance)
# Sign up free at https://www.maptiler.com/
NEXT_PUBLIC_MAPTILER_KEY=

# Local SQLite (dev default)
# To use SQLite locally, copy to .env and set:
# DATABASE_PROVIDER=sqlite
# DATABASE_URL=file:./dev.db

# Supabase Storage (optional, for hosting images)
# Get from Supabase Project Settings â†’ API
SUPABASE_URL=https://YOUR-PROJECT-ref.supabase.co
SUPABASE_ANON_KEY=anon-key-for-client
# For server-side scripts like migration/upload. Keep secret.
SUPABASE_SERVICE_ROLE_KEY=service-role-key
# Bucket name to store images
SUPABASE_BUCKET=spots

# Web Search provider for event discovery (server-side)
# Choose one provider and set its credentials
#SEARCH_PROVIDER=google
#GOOGLE_API_KEY=your_google_api_key
#GOOGLE_CSE_ID=your_cse_id

#SEARCH_PROVIDER=bing
#BING_SEARCH_KEY=your_bing_search_api_key

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
# Generate a secure secret with: openssl rand -base64 32
# Or use: https://generate-secret.vercel.app/32
NEXTAUTH_SECRET=your-32-char-random-secret-key-here

# Admin Operations Token (optional, for admin-only features)
ADMIN_OPS_TOKEN=your-admin-token-here

# Unsplash API (for automatic image fetching)
# Get your free API key at https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
